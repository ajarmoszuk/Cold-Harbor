<?xml version="1.0" encoding="utf-8"?>
<installer-gui-script minSpecVersion="1">
    <title>ColdHarbor Screensaver</title>
    <background file="background.png" alignment="bottomleft" scaling="none"/>
    <welcome file="welcome.html"/>
    <conclusion file="conclusion.html"/>
    <license file="license.txt"/>
    <pkg-ref id="com.coldharbor.screensaver"/>
    <options customize="never" require-scripts="false" hostArchitectures="x86_64,arm64"/>
    <choices-outline>
        <line choice="default">
            <line choice="com.coldharbor.screensaver"/>
        </line>
    </choices-outline>
    <choice id="default"/>
    <choice id="com.coldharbor.screensaver" visible="false">
        <pkg-ref id="com.coldharbor.screensaver"/>
    </choice>
    <pkg-ref id="com.coldharbor.screensaver" version="1.0" onConclusion="none">ColdHarborScreensaver.pkg</pkg-ref>
</installer-gui-script> 